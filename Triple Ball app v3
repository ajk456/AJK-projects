import React, { useState, useEffect } from 'react';
import { RotateCcw, ArrowLeftRight, History, Edit3, Check, Trophy } from 'lucide-react';

const TripleBallPro = () => {
  // --- 1. PERSISTENCE HELPER ---
  // This function tries to find saved data. If none, it uses the default value.
  const loadState = (key, defaultValue) => {
    try {
      const saved = localStorage.getItem(key);
      if (saved !== null) return JSON.parse(saved);
    } catch (e) {
      console.warn("Error loading saved state, using default", e);
    }
    return defaultValue;
  };

  // --- 2. STATE DECLARATIONS ---
  
  // Match Context (Wrapped in loadState)
  const [currentSet, setCurrentSet] = useState(() => loadState('currentSet', 1));
  const [setsWonA, setSetsWonA] = useState(() => loadState('setsWonA', 0));
  const [setsWonB, setSetsWonB] = useState(() => loadState('setsWonB', 0));
  const [gameWinner, setGameWinner] = useState(() => loadState('gameWinner', null));
  const [setWinner, setSetWinner] = useState(() => loadState('setWinner', null));

  // Score
  const [scoreA, setScoreA] = useState(() => loadState('scoreA', 0));
  const [scoreB, setScoreB] = useState(() => loadState('scoreB', 0));
  
  // Teams
  const [teamAName, setTeamAName] = useState(() => loadState('teamAName', "Home"));
  const [teamBName, setTeamBName] = useState(() => loadState('teamBName', "Visitor"));
  const [isEditing, setIsEditing] = useState(false);

  // Triple Ball Logic
  const [servingTeam, setServingTeam] = useState(() => loadState('servingTeam', 'A'));
  const [ballState, setBallState] = useState(() => loadState('ballState', 0)); // 0=Serve, 1=Toss Receive, 2=Toss Serve
  
  // History (Undo Stack) - We do NOT save this to localStorage as it gets too big
  const [history, setHistory] = useState([]);

  // --- 3. AUTO-SAVE EFFECT ---
  // Every time any valid state changes, save it to the phone's memory
  useEffect(() => {
    localStorage.setItem('currentSet', JSON.stringify(currentSet));
    localStorage.setItem('setsWonA', JSON.stringify(setsWonA));
    localStorage.setItem('setsWonB', JSON.stringify(setsWonB));
    localStorage.setItem('gameWinner', JSON.stringify(gameWinner));
    localStorage.setItem('setWinner', JSON.stringify(setWinner));
    localStorage.setItem('scoreA', JSON.stringify(scoreA));
    localStorage.setItem('scoreB', JSON.stringify(scoreB));
    localStorage.setItem('teamAName', JSON.stringify(teamAName));
    localStorage.setItem('teamBName', JSON.stringify(teamBName));
    localStorage.setItem('servingTeam', JSON.stringify(servingTeam));
    localStorage.setItem('ballState', JSON.stringify(ballState));
  }, [currentSet, setsWonA, setsWonB, gameWinner, setWinner, scoreA, scoreB, teamAName, teamBName, servingTeam, ballState]);


  // --- 4. GAME LOGIC ---

  const checkSetWin = (newScoreA, newScoreB) => {
    const limit = currentSet === 3 ? 15 : 25;
    if (newScoreA >= limit && newScoreA - newScoreB >= 2) return 'A';
    if (newScoreB >= limit && newScoreB - newScoreA >= 2) return 'B';
    return null;
  };

  const handlePoint = (team) => {
    if (gameWinner || setWinner) return; 

    // Snapshot for Undo (In-memory only)
    setHistory([...history, {
      scoreA, scoreB, servingTeam, ballState, 
      currentSet, setsWonA, setsWonB, setWinner, gameWinner
    }]);

    // Update Score
    let newA = scoreA;
    let newB = scoreB;
    if (team === 'A') newA = scoreA + 1;
    else newB = scoreB + 1;

    setScoreA(newA);
    setScoreB(newB);

    // Check for Set Win
    const winner = checkSetWin(newA, newB);
    if (winner) {
      setSetWinner(winner);
      return; 
    }

    // Triple Ball Sequence Logic
    if (ballState === 0) {
      setBallState(1); // Move to Toss 1
    } else if (ballState === 1) {
      setBallState(2); // Move to Toss 2
    } else if (ballState === 2) {
      finishSequence(); // Sequence Over
    }
  };

  const finishSequence = () => {
    // Automatic rotation every 3 balls regardless of winner
    setServingTeam(prev => prev === 'A' ? 'B' : 'A');
    setBallState(0);
  };

  const finalizeSet = () => {
    // Record Set Win
    if (setWinner === 'A') {
      const newSets = setsWonA + 1;
      setSetsWonA(newSets);
      if (newSets === 2) {
        setGameWinner('A');
        setSetWinner(null);
        return;
      }
    } else {
      const newSets = setsWonB + 1;
      setSetsWonB(newSets);
      if (newSets === 2) {
        setGameWinner('B');
        setSetWinner(null);
        return;
      }
    }

    // Prepare Next Set
    setCurrentSet(prev => prev + 1);
    setScoreA(0);
    setScoreB(0);
    setBallState(0);
    setSetWinner(null);
    setServingTeam(prev => prev === 'A' ? 'B' : 'A'); // Swap server for new set
  };

  const resetMatch = () => {
    if(!window.confirm("Start a brand new match? This clears all scores.")) return;
    
    // Clear Storage
    localStorage.clear();

    // Reset State to Defaults
    setScoreA(0);
    setScoreB(0);
    setSetsWonA(0);
    setSetsWonB(0);
    setCurrentSet(1);
    setGameWinner(null);
    setSetWinner(null);
    setBallState(0);
    setServingTeam('A');
    setHistory([]);
    
    // Slight delay to ensure reload picks up clean state if needed, though state set above handles it.
  };

  const handleUndo = () => {
    if (history.length === 0) return;
    const last = history[history.length - 1];
    setScoreA(last.scoreA);
    setScoreB(last.scoreB);
    setServingTeam(last.servingTeam);
    setBallState(last.ballState);
    setCurrentSet(last.currentSet);
    setSetsWonA(last.setsWonA);
    setSetsWonB(last.setsWonB);
    setSetWinner(last.setWinner);
    setGameWinner(last.gameWinner);
    setHistory(history.slice(0, -1));
  };

  // --- 5. UI HELPERS ---
  const getBallLabel = () => {
    const server = servingTeam === 'A' ? teamAName : teamBName;
    const receiver = servingTeam === 'A' ? teamBName : teamAName;

    if (ballState === 0) return `SERVE: ${server.toUpperCase()}`;
    if (ballState === 1) return `TOSS TO: ${receiver.toUpperCase()}`;
    if (ballState === 2) return `TOSS TO: ${server.toUpperCase()}`;
    return "";
  };

  return (
    <div className="flex flex-col h-screen bg-gray-900 text-white font-sans overflow-hidden select-none">
      
      {/* --- TOP BAR: Match Info --- */}
      <div className="bg-gray-800 p-2 flex justify-between items-center shadow-md z-20">
        <button onClick={() => setIsEditing(!isEditing)} className="text-gray-400 hover:text-white px-2">
          {isEditing ? <Check size={20}/> : <Edit3 size={20} />}
        </button>
        
        <div className="flex items-center gap-4">
          <div className="text-sm font-bold bg-gray-700 px-3 py-1 rounded-full">
            SET {currentSet} <span className="text-gray-400 font-normal ml-1">
              (to {currentSet === 3 ? '15' : '25'})
            </span>
          </div>
        </div>

        <button onClick={resetMatch} className="text-xs font-bold text-red-400 border border-red-900 bg-red-900/20 px-3 py-1 rounded hover:bg-red-900/50">
          NEW MATCH
        </button>
      </div>

      {/* --- MAIN COURT AREA (Split 50/50) --- */}
      <div className="flex-1 flex relative">
        
        {/* TEAM A (LEFT - BLUE) */}
        <div className={`flex-1 flex flex-col items-center justify-start pt-8 relative transition-colors duration-500
          ${servingTeam === 'A' ? 'bg-blue-600' : 'bg-blue-900'}
        `}>
          {/* Sets Won Dots */}
          <div className="flex gap-1 mb-2">
            <div className={`w-3 h-3 rounded-full ${setsWonA > 0 ? 'bg-yellow-400' : 'bg-blue-800'}`}/>
            <div className={`w-3 h-3 rounded-full ${setsWonA > 1 ? 'bg-yellow-400' : 'bg-blue-800'}`}/>
          </div>

          {/* Name */}
          {isEditing ? (
             <input value={teamAName} onChange={e => setTeamAName(e.target.value)} className="text-black text-center p-1 rounded w-32"/>
          ) : (
             <h2 className="text-2xl font-bold tracking-tight uppercase px-2 text-center">{teamAName}</h2>
          )}

          {/* Score */}
          <div className="mt-6 text-[120px] leading-none font-bold font-mono">
            {scoreA}
          </div>

          {/* Serve Indicator */}
          {servingTeam === 'A' && (
             <div className="mt-4 bg-yellow-400 text-blue-900 px-6 py-2 rounded-full font-black text-lg shadow-lg animate-pulse flex items-center gap-2">
               üèê SERVING
             </div>
          )}
          
          {/* Click Area for Point */}
          <button 
            onClick={() => handlePoint('A')}
            className="absolute inset-x-4 bottom-4 top-64 bg-white/10 hover:bg-white/20 rounded-2xl border-2 border-white/20 flex items-end justify-center pb-8 active:scale-[0.98] transition-all"
          >
            <span className="text-3xl font-bold text-white/80">+ POINT</span>
          </button>
        </div>

        {/* TEAM B (RIGHT - RED) */}
        <div className={`flex-1 flex flex-col items-center justify-start pt-8 relative transition-colors duration-500
          ${servingTeam === 'B' ? 'bg-red-600' : 'bg-red-900'}
        `}>
          {/* Sets Won Dots */}
          <div className="flex gap-1 mb-2">
            <div className={`w-3 h-3 rounded-full ${setsWonB > 0 ? 'bg-yellow-400' : 'bg-red-800'}`}/>
            <div className={`w-3 h-3 rounded-full ${setsWonB > 1 ? 'bg-yellow-400' : 'bg-red-800'}`}/>
          </div>

           {/* Name */}
           {isEditing ? (
             <input value={teamBName} onChange={e => setTeamBName(e.target.value)} className="text-black text-center p-1 rounded w-32"/>
          ) : (
             <h2 className="text-2xl font-bold tracking-tight uppercase px-2 text-center">{teamBName}</h2>
          )}

          {/* Score */}
          <div className="mt-6 text-[120px] leading-none font-bold font-mono">
            {scoreB}
          </div>

          {/* Serve Indicator */}
          {servingTeam === 'B' && (
             <div className="mt-4 bg-yellow-400 text-red-900 px-6 py-2 rounded-full font-black text-lg shadow-lg animate-pulse flex items-center gap-2">
               üèê SERVING
             </div>
          )}

          {/* Click Area for Point */}
          <button 
            onClick={() => handlePoint('B')}
            className="absolute inset-x-4 bottom-4 top-64 bg-white/10 hover:bg-white/20 rounded-2xl border-2 border-white/20 flex items-end justify-center pb-8 active:scale-[0.98] transition-all"
          >
            <span className="text-3xl font-bold text-white/80">+ POINT</span>
          </button>
        </div>

        {/* --- CENTER OVERLAY: Triple Ball Sequence --- */}
        <div className="absolute top-[45%] left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex flex-col items-center z-10 pointer-events-none w-full">
          <div className="bg-gray-900/95 backdrop-blur-md px-8 py-5 rounded-2xl shadow-2xl border border-gray-600 flex flex-col items-center min-w-[200px]">
             {/* 3 Dots */}
             <div className="flex gap-4 mb-4">
               {[0, 1, 2].map(step => (
                 <div key={step} className={`w-6 h-6 rounded-full border-2 transition-all ${
                   ballState === step 
                    ? 'bg-yellow-400 border-yellow-400 scale-125' 
                    : ballState > step ? 'bg-gray-500 border-gray-500' : 'border-gray-600'
                 }`} />
               ))}
             </div>
             
             {/* Action Text */}
             <div className="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Current Action</div>
             <div className="text-xl font-black text-white whitespace-nowrap text-center">
               {getBallLabel()}
             </div>
          </div>
          
          {/* Manual Serve Swap */}
          <button onClick={() => setServingTeam(prev => prev==='A'?'B':'A')} className="pointer-events-auto mt-4 bg-gray-800 p-2 rounded-full text-gray-400 hover:text-white border border-gray-600">
             <ArrowLeftRight size={16} />
          </button>
        </div>

      </div>

      {/* --- FOOTER: Undo --- */}
      <div className="bg-gray-800 p-3 flex justify-center">
         <button onClick={handleUndo} className="flex items-center gap-2 text-gray-400 hover:text-white text-sm">
            <History size={16} /> Undo Last Action
         </button>
      </div>

      {/* --- OVERLAYS: Set/Match Winner --- */}
      {(setWinner || gameWinner) && (
        <div className="absolute inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50">
          <div className="bg-white text-gray-900 p-8 rounded-2xl shadow-2xl text-center max-w-sm w-full mx-4">
            
            <Trophy size={64} className={`mx-auto mb-4 ${gameWinner ? 'text-yellow-500' : 'text-blue-500'}`} />
            
            <h2 className="text-3xl font-black uppercase mb-2">
              {gameWinner ? 'MATCH WINNER' : 'SET COMPLETE'}
            </h2>
            
            <div className="text-xl font-bold text-gray-600 mb-8">
              {setWinner === 'A' || gameWinner === 'A' ? teamAName : teamBName}
            </div>

            {gameWinner ? (
               <button onClick={resetMatch} className="w-full py-4 bg-yellow-500 hover:bg-yellow-400 text-black font-bold rounded-xl text-xl shadow-lg">
                 Start New Match
               </button>
            ) : (
               <button onClick={finalizeSet} className="w-full py-4 bg-blue-600 hover:bg-blue-500 text-white font-bold rounded-xl text-xl shadow-lg">
                 Start Set {currentSet + 1}
               </button>
            )}
            
            <div className="mt-4 text-sm text-gray-400">
               Final Score: {scoreA} - {scoreB}
            </div>

          </div>
        </div>
      )}

    </div>
  );
};

export default TripleBallPro;
